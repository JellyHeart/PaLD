CC = gcc
CFLAGS = -Wall
LDFLAGS = -lm
OBJFILES = main.o utils.o pald_opt.o pald_orig.o
TARGET = PaLD
all: $(TARGET)

$(TARGET): $(OBJFILES)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJFILES) $(LDFLAGS)

main.o: main.c
	$(CC) $(CFLAGS) -c main.c
utils.o: utils.c
	$(CC) $(CFLAGS) -c utils.c -lm
pald_opt.o: pald_opt.c
	$(CC) $(CFLAGS) -c pald_opt.c
pald_orig.o: pald_orig.c
	$(CC) $(CFLAGS) -c pald_orig.c

clean:
	rm -f $(OBJFILES) $(TARGET) *~
